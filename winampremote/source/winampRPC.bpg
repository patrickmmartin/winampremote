#------------------------------------------------------------------------------
VERSION = BWS.01
#------------------------------------------------------------------------------
!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = RUNMIDL.BAT remote.exe remote.DEU remote.NLD gen_RPCinterface \
  conremote.exe clientdll.dll clientnetmsrpc.dll
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------

gen_RPCinterface: gen_RPCinterface.bpr
  $(MAKE)

clientdll.dll: clientdll.bpr
  $(MAKE)

conremote.exe: conremote.bpr
  $(MAKE)

remote.exe: remote.bpr
  $(MAKE)

remote.DEU: DEU\remote.bpr
  $(ROOT)\bin\bpr2mak $**
  $(ROOT)\bin\make -$(MAKEFLAGS) -f$*.mak

remote.NLD: NLD\remote.bpr
  $(ROOT)\bin\bpr2mak $**
  $(ROOT)\bin\make -$(MAKEFLAGS) -f$*.mak

clientnetmsrpc.dll: clientnetmsrpc.bpr
  $(ROOT)\bin\bpr2mak $**
  $(ROOT)\bin\make -$(MAKEFLAGS) -f$*.mak

RUNMIDL.BAT: RUNMIDL.BAT
  call $**


