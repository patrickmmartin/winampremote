#------------------------------------------------------------------------------
VERSION = BWS.01
#------------------------------------------------------------------------------
!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = runmidl remote gen_RPCinterface clientdll.dll conremote.exe
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------

remote: remote.bpr
  $(MAKE)

gen_RPCinterface: gen_RPCinterface.bpr
  $(MAKE)

clientdll.dll: clientdll.bpr
  $(MAKE)

conremote.exe: conremote.bpr
  $(MAKE)

runmidl: runmidl.bat
  call $**


